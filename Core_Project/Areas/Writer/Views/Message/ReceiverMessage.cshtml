@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "ReceiverMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderen Adı Soyadı</th>
                            <th>Gönderen Mail</th>
                            <th>Tarih</th>
                            <th>Detay</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.WriterMessageID</th>
                                <td>@item.Subject</td>
                                <td>@item.SenderName</td>
                                <td>@item.Sender</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td> <a href="/Writer/Message/ReceiverMessageDetails/@item.WriterMessageID" class="btn btn-inverse-primary"> Mesajı Gör</a> </td>
                                <td>  <a href="/Writer/Message/Delete/@item.WriterMessageID" class="btn btn-inverse-dark">Sil</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

