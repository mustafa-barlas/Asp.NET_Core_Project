@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form asp-action="EditAbout">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Hakımda Bölümü Düzenleme Paneli </p>
                <div class="form-group">
                    <label>ID</label>
                    <input type="text" class="form-control" asp-for="@Model.AboutID">
                </div>
                <div class="form-group">
                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="@Model.Title">
                </div>
                <div class="form-group">
                    <label>Yaş</label>
                    <input type="text" class="form-control" asp-for="@Model.age">
                </div>
                <div class="form-group">
                    <label>Mail</label>
                    <input type="text" class="form-control" asp-for="@Model.Mail">
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    <input type="text" class="form-control" asp-for="@Model.Address">
                </div>
                    <div class="form-group">
                    <label>Görsel</label>
                    <input type="text" class="form-control" asp-for="@Model.ImageUrl">
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <input type="text" class="form-control" asp-for="@Model.Phone">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" asp-for="@Model.Description" rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </div>
        </div>
    </div>
</form>