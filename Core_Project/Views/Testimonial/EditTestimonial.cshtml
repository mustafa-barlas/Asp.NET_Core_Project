@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">  Referans Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">ID</label>
                        @Html.TextBoxFor(x => x.TestimonialID , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Ad  Soyad</label>
                        @Html.TextBoxFor(x => x.ClientName , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Şirket</label>
                        @Html.TextBoxFor(x => x.Company , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Rol</label>
                        @Html.TextBoxFor(x => x.Title , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Görsel</label>
                        @Html.TextBoxFor(x => x.ImageUrl , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Yorum</label>
                        @Html.TextAreaFor(x => x.Comment ,8,3 , new {@class ="form-control"})

                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">   <a href="/Testimonial/Index/" style="text-decoration:none">Iptal</a>  </button>
                </form>
            </div>
        </div>
    </div>
}

