@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "GetDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("GetDetails", "ContactSubPlace", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">  iletişim Bilgileri Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.ContactID , new {@class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Title , new {@class ="form-control"})

                    </div>
                    <div class="form-grou p">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x => x.Description ,6,3, new {@class ="form-control"})
                    </div>
                    <div class="form-grou p">
                        <label>Mail</label>
                        @Html.TextBoxFor(x => x.Mail , new {@class ="form-control"})
                    </div>
                    <div class="form-grou p">
                        <label>Telefon</label>
                        @Html.TextBoxFor(x => x.PhoneNumber , new {@class ="form-control"})
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">   <a href="/Dashboars/Index/" style="text-decoration:none">Iptal</a>  </button>
                </form>
            </div>
        </div>
    </div>
}



