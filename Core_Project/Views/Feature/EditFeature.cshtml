@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Öne Çıkanlar  Güncelleme Tablosu</h3>
</div>
@using (Html.BeginForm("EditFeature", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x => x.FeatureID)
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Header, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Header  ,"", new { @style="color:red" })
    <br />
    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Name  ,"", new { @style="color:red" })

    <br />
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.Title, new  { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Title  ,"", new { @style="color:red" })
    <br />
    <button class="btn btn-success">Güncelle</button>

}

