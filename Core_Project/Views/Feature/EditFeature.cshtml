@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditFeature", "Feature", FormMethod.Post))
{
        <div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Öne Çıkanlar Düzenleme Paneli </p>
            <form class="forms-sample">
    @Html.HiddenFor(x => x.FeatureID)
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Header, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Header  ,"", new { @style="color:red" })
    <br />
    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Name  ,"", new { @style="color:red" })

    <br />
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.Title, new  { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Title  ,"", new { @style="color:red" })
    <br />
    <button class="btn btn-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>

}

