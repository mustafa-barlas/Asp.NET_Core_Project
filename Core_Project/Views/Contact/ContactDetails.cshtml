@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("ContactDetails", "Contact", FormMethod.Get))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Mesaj Detay Sayfası </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">ID</label>
                        @Html.TextBoxFor(x => x.MessageID , new {@class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Gönderen</label>
                        @Html.TextBoxFor(x => x.Name , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail</label>
                        @Html.TextBoxFor(x => x.Mail , new {@class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Tarih</label>
                        @Html.TextBoxFor(x => x.Date , new {@class ="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">İçerik</label>
                        @Html.TextAreaFor(x => x.Content ,6,3, new {@class ="form-control"})
                    </div>
                    <a asp-action="Index" class="btn btn-primary mr-2">İletişim Sayfasına Dön</a>
                </form>
            </div>
        </div>
    </div>
}

