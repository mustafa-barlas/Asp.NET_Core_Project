@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">  Yetenek Ekleme Paneli </p>
            <form class="forms-sample" >

                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.TextBoxFor(x => x.Title , new {@class ="form-control"})

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Değer</label>
                    @Html.TextBoxFor(x => x.Value , new {@class ="form-control"})
        
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">   <a href="/Skill/Index/" style="text-decoration:none">Iptal</a>  </button>
            </form>
        </div>
    </div>
</div>
}