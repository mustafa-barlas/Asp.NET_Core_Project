@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">  Yetenek Düzenleme Paneli </p>
            <form class="forms-sample" >
                <div class="form-group">
                    <label for="exampleInputName1">ID</label>
                    @Html.TextBoxFor(x => x.SkillID , new {@class ="form-control"})

                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.TextBoxFor(x => x.Title , new {@class ="form-control"})

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Değer</label>
                    @Html.TextBoxFor(x => x.Value , new {@class ="form-control"})

                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-dark">   <a href="/Skill/Index/" style="text-decoration:none">Iptal</a>  </button>
            </form>
        </div>
    </div>
</div>
}