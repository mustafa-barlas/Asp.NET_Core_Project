@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageAdd";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AdminMessageAdd", "AdminMessage", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">  Mesaj Gönderme Paneli </p>
                <form class="forms-sample">

                    <div class="form-group">
                        <label for="exampleInputName1">Konu</label>
                        @Html.TextBoxFor(x => x.Subject , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Alıcı</label>
                        @Html.TextBoxFor(x => x.Receiver , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Alıcı</label>
                        @Html.TextAreaFor(x => x.MessageContent,8,3 , new {@class ="form-control"})

                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">   <a href="/Skill/Index/" style="text-decoration:none">Iptal</a>  </button>
                </form>
            </div>
        </div>
    </div>
}
