@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AdminMessageDetails", "AdminMessage", FormMethod.Get))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Mesaj Detay Sayfası </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">ID</label>
                        @Html.TextBoxFor(x => x.WriterMessageID , new {@class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Konu</label>
                        @Html.TextBoxFor(x => x.Subject , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Tarih</label>
                        @Html.TextBoxFor(x => x.Date , new {@class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Gönderici</label>
                        @Html.TextBoxFor(x => x.SenderName , new {@class ="form-control"})
                    </div>
                        <div class="form-group">
                        <label for="exampleInputPassword4">Alıcı</label>
                        @Html.TextBoxFor(x => x.ReceiverName , new {@class ="form-control"})
                    </div>
                     <div class="form-group">
                           <label for="exampleInputPassword4">Alıcı</label>
                      @Html.TextBoxFor(x => x.Receiver , new {@class ="form-control"})
                        </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Mesaj</label>
                        @Html.TextAreaFor(x => x.MessageContent ,6,3, new {@class ="form-control"})
                    </div>
                    <a asp-action="ReceiverMessagelist" class="btn btn-primary mr-2">Gelen Sayfasına Dön</a>
                    <a asp-action="SenderMessagelist" class="btn btn-warning mr-2">Giden Sayfasına Dön</a>
                </form>
            </div>
        </div>
    </div>
}

