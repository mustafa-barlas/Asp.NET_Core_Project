@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">  Deneyim Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">ID</label>
                        @Html.TextBoxFor(x => x.SocialMediaID , new {@class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Platform</label>
                        @Html.TextBoxFor(x => x.Name , new {@class ="form-control"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Url</label>
                        @Html.TextBoxFor(x => x.Url , new {@class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Icon</label>
                        @Html.TextBoxFor(x => x.Icon , new {@class ="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword4">Durum</label>
                        @Html.TextBoxFor(x => x.Status , new {@class ="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">   <a href="/SocialMedia/Index/" style="text-decoration:none">Iptal</a>  </button>
                </form>
            </div>
        </div>
    </div>
}

